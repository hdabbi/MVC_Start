<form asp-controller="Home" asp-action="Reviews" method="post">
    <p>ItemName: <input asp-for="ItemName" /></p>
    <p>Rating: <input asp-for="Rating" /></p>
    <p>Reviewer: <input asp-for="Reviewer" /></p>

    <button type="submit">Submit</button>
</form>
